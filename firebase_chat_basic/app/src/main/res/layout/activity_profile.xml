<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="profileActivity"
            type="com.example.firebase_chat_basic.view.activity.ProfileActivity" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/profile_image_view"
            android:scaleType="center"
            android:src="@drawable/circle_image"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0"
            tools:ignore="MissingConstraints"/>


        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/profile_information_view"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/profile_image_view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="MissingConstraints">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/profile_name"
                android:text="TaeSunHong"
                android:textColor="@color/chatMainBackgroundColor"
                android:textSize="22sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="HardcodedText" />


            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/profile_state_message"
                android:onClick="@{ () -> profileActivity.state_message() }"
                android:background="@null"
                android:text="오늘의 나는 내일의 나를 만들어간다."
                android:textSize="14sp"
                android:layout_marginTop="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="HardcodedText" />

        </androidx.appcompat.widget.LinearLayoutCompat>


        <RelativeLayout
            android:id="@+id/profile_function_view"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@+id/profile_information_view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="MissingConstraints,UselessLeaf">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/profile_chat_text_button"
                android:gravity="center"
                android:background="@drawable/profile_text_button_bg"
                android:elevation="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="20dp"
                android:text="채팅하기"
                tools:ignore="HardcodedText" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/profile_chat_contact_button"
                android:gravity="center"
                android:elevation="3dp"
                android:background="@drawable/profile_text_button_bg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="연락하기"
                tools:ignore="HardcodedText" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/profile_chat_reservation"
                android:elevation="3dp"
                android:gravity="center"
                android:background="@drawable/profile_text_button_bg"
                android:layout_marginEnd="20dp"
                android:layout_alignParentEnd="true"
                android:text="예약하기"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="HardcodedText" />
        </RelativeLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>