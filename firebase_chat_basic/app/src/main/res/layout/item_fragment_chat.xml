<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="chatViewModel"
            type="com.example.firebase_chat_basic.viewModel.ChatViewModel"/>

        <variable
            name="pos"
            type="Integer"/>

    </data>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="90dp">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <!-- 일단 고정 -->
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_marginStart="10dp"
                android:layout_gravity="center"
                android:id="@+id/chat_profile_image"
                android:src="@drawable/circle_image"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:civ_border_color="@color/chatMainBackgroundColor"
                app:civ_border_width="1dp" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_margin="10dp"
                android:layout_marginStart="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/black"
                        android:id="@+id/chat_name"
                        android:text="@{chatViewModel.getName(pos).toString()}"
                        android:textSize="18sp"
                        android:layout_marginStart="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/chat_date"
                        android:text="@{chatViewModel.getDate(pos).toString()}"
                        android:layout_gravity="center"
                        android:layout_marginEnd="10dp"
                        android:gravity="right"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:ignore="RtlHardcoded" />

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_gravity="center"
                        android:textColor="@color/chatMainBackgroundColor"
                        android:id="@+id/chat_content"
                        android:text="@{chatViewModel.getContent(pos).toString()}"
                        android:textSize="12sp"
                        android:layout_marginStart="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:gravity="center"
                        android:text="@{chatViewModel.getCount(pos).toString()}"
                        android:layout_marginStart="120dp"
                        android:textColor="@color/white"
                        android:background="@drawable/chat_count_bg"
                        android:id="@+id/chat_count"
                        android:layout_marginEnd="10dp"
                        android:layout_gravity="center"
                        android:layout_width="20dp"
                        android:layout_height="20dp"/>

                </androidx.appcompat.widget.LinearLayoutCompat>



            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <View
            android:background="@color/chatItemDividerColor"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>

    </androidx.cardview.widget.CardView>
</layout>