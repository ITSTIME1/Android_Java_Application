<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="chatViewModel"
            type="com.example.firebase_chat_basic.viewModel.ChatViewModel"/>

        <variable
            name="pos"
            type="Integer"/>
    </data>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="90dp">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/chat_item_layout"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_margin="10dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/circle_image"
                android:layout_width="50dp"
                android:layout_height="50dp"/>

            <!-- text header -->
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_margin="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="@{chatViewModel.get_name(pos)}"
                        android:textSize="15sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:gravity="right"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        tools:ignore="RtlHardcoded">
                        <TextView
                            android:text="@{chatViewModel.get_date(pos)}"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"/>

                    </androidx.appcompat.widget.LinearLayoutCompat>




                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_gravity="center"
                            android:text="@{chatViewModel.get_content(pos)}"
                            android:textSize="11sp"
                            android:textColor="@color/chatMainBackgroundColor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>


                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:gravity="end"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:text="@{chatViewModel.get_count(pos)}"
                                android:gravity="center"
                                android:textColor="@color/white"
                                android:background="@drawable/chat_count_bg"
                                android:layout_width="20dp"
                                android:layout_height="20dp"/>

                        </androidx.appcompat.widget.LinearLayoutCompat>

                    </androidx.appcompat.widget.LinearLayoutCompat>

                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.appcompat.widget.LinearLayoutCompat>


        </androidx.appcompat.widget.LinearLayoutCompat>

        <View
            android:background="@color/chatItemDividerColor"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>

    </androidx.cardview.widget.CardView>
</layout>