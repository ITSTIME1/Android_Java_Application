<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="90dp">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <!-- 일단 고정 -->
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_marginStart="10dp"
                android:layout_gravity="center"
                android:id="@+id/contact_profile_image"
                android:src="@drawable/circle_image"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:civ_border_color="@color/chatMainBackgroundColor"
                app:civ_border_width="1dp" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_marginStart="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:textColor="@color/black"
                    android:id="@+id/contact_name"
                    android:textSize="18sp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="15dp"
                    android:text="HongTaeSun"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />


                <TextView
                    android:textColor="@color/chatItemDividerColor"
                    android:id="@+id/contact_content"
                    android:textSize="12sp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:text="010-9775-4185"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.appcompat.widget.LinearLayoutCompat>
        <View
            android:background="@color/chatItemDividerColor"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>

    </androidx.cardview.widget.CardView>
</layout>